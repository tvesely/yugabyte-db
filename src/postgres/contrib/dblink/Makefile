# contrib/dblink/Makefile

MODULE_big = dblink
PG_CPPFLAGS = -I$(libpq_srcdir)
OBJS	= dblink.o
SHLIB_LINK = $(libpq)
SHLIB_PREREQS = submake-libpq

DATA_built = dblink.sql
DATA = uninstall_dblink.sql
